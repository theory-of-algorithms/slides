{
  "version": "1.1.0"
  ,"_runner": "terminal"
  "tasks": [
    {
      "taskName": "Compile",
      "command": "latexmk",
      "isShellCommand": true,
      "isBuildCommand": true,
      "showOutput": "always"
    },
    {
      "taskName": "Spell Check",
      "command": "aspell",
      "isShellCommand": true,
      "isTestCommand": true,
      "args": [
        "-c", "-t", "${file}"
      ],
      "showOutput": "always"
    }
  ]
}